<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_gray_blue"
    tools:context=".ProfileSickFragment">

    <TextView
        android:id="@+id/textViewProfileSickIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Больничный"
        android:background="@color/white"
        android:textColor="@color/text_color_Dark"
        android:textSize="22sp"
        android:paddingStart="50dp"
        app:layout_constraintStart_toEndOf="@id/imageButtonBackSick"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButtonAddSick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_circle_line"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/color_light_gray_blue"
        app:layout_constraintBottom_toBottomOf="@+id/textViewProfileSickIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewProfileSickIn" />

    <ImageButton
        android:id="@+id/imageButtonBackSick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_arrow"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/textViewNoSick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет активных больничных"
        android:textColor="@color/text_color_Middle_Gray_Blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>